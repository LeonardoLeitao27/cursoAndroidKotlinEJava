<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#54798C"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Segunda-Feira, 13 de Dezembro"
        android:textColor="#fff"
        android:textSize="24sp" />

    <View
        android:id="@+id/separador"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/text_date"
        android:layout_marginTop="16dp"
        android:background="#fff" />

    <CheckBox
        android:id="@+id/check_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separador"
        android:layout_marginTop="16dp"
        android:text="Cortar a grama"
        android:textColor="#fff" />

    <CheckBox
        android:id="@+id/check_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_01"
        android:layout_marginTop="16dp"
        android:text="Fazer compras"
        android:textColor="#fff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Complete todas as tarefas"
        android:textColor="#fff"
        android:textSize="26dp" />


</RelativeLayout>